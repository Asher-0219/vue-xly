$before() {
  &:before {
    content: "";
    width: 0;
    height: 1px;
    display: block;
  }
}

$after() {
  &:after {
    content: "";
    width: 0;
    height: 1px;
    display: block;
  }
}

$clear() {
  &:after {
    content: "";
    width: 0;
    height: 0;
    display: block;
    clear: both;
  }
}

$mask()
  z-index: 9998
  position: fixed
  left: 0
  top: 0
  width: 100%
  height: 100%
  background-color: rgba(0, 0, 0, .5)
  transition: opacity .3s ease

$flex-row()
  display flex
  flex-wrap wrap
  align-items center
  justify-content space-between

$flex-column()
  display flex
  flex-direction column
  align-items center

$bacsize()
  background-repeat no-repeat
  background-position center center
  background-size cover

$triangle(w, h, c = #fff, radius = .03rem)
  border w solid transparent
  border-width w h
  border-left-color c
  border-radius radius

$setheader()
  border-bottom .01rem solid #e2e2e2
  color #4c4c4c
  background-color #fff

$setHeaderImg(w, h) {
  width w
  height h
  background-repeat no-repeat
  background-position cover
  background-size 100%
}

$btn(w, h, r = h) {
  width w
  height h
  border-radius r
  line-height h
  text-align center
}

$setHeaderAll()
  background-color #f5f5f7
  .mint-header
    $setheader()